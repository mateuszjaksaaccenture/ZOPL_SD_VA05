<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog title="{i18n>SERIAL_NUMS} {SN>/OrdId} ({SN>/OrdPosNr})">
		<Table inset="true" mode="None" 
				items="{ path: 'SN>/SN' }"
				noDataText="{i18n>NO_SERNR}">
			<items>
				<ColumnListItem unread="true" counter="0">
					<cells>
						<Text text="{SN>SerNum}"></Text>
					</cells>
				</ColumnListItem>
			</items>
			<columns>
				<Column hAlign="Center" minScreenWidth="tablet" width="15%" demandPopin="true">
					<header>
						<Text text="{i18n>SERIALS_FOR_SO}" textAlign="Left" width="100%" maxLines="0"></Text>
					</header>
				</Column>
			</columns>
		</Table>
		<beginButton>
			<Button text="{i18n>CLOSE}" press="onCloseDialogSN"/>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>